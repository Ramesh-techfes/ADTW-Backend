{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./build",
    "module": "NodeNext",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "moduleResolution": "NodeNext"
  }
}
